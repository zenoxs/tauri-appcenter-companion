{
  "package": {
    "productName": "AC Companion",
    "version": "0.2.0"
  },
  "build": {
    "distDir": "../dist",
    "devPath": "http://localhost:3000",
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build"
  },
  "tauri": {
    "macOSPrivateApi": true,
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.zenox.appcenter_companion",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [],
      "externalBin": [],
      "copyright": "",
      "category": "DeveloperTool",
      "shortDescription": "",
      "longDescription": "",
      "deb": {
        "depends": []
      },
      "macOS": {
        "frameworks": [],
        "exceptionDomain": "",
        "signingIdentity": null,
        "providerShortName": null,
        "entitlements": null
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "updater": {
      "active": false
    },
    "allowlist": {
      "window": {
        "startDragging": true
      },
      "http": {
        "all": true,
        "request": true,
        "scope": [
          "https://api.appcenter.ms/*",
          "https://api.github.com/*"
        ]
      }
    },
    "windows": [
      {
        "title": "AC Companion",
        "width": 800,
        "height": 600,
        "transparent": true,
        "resizable": true,
        "decorations": false,
        "fullscreen": false,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  }
}